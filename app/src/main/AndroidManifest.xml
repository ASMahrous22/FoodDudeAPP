<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_logo"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:label="Food Dude"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodDude"
        tools:targetApi="31">

        <activity
            android:name=".auth.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name=".auth.view.SignInActivity" />
    <activity android:name=".auth.view.RegisterActivity" />
    <activity android:name=".meal.view.activity.RandomMealActivity" />
    <activity android:name=".meal.view.activity.NavigationActivity" />
    <activity android:name=".meal.view.activity.SearchActivity" />
    <activity android:name=".meal.view.activity.CountryActivity" />
    <activity android:name=".meal.view.activity.FavoritesActivity" />
    <activity android:name=".meal.view.activity.MealDetailsActivity" />
    <activity android:name=".meal.view.activity.WeeklyPlanActivity" />
    <activity android:name=".meal.view.activity.ProfileActivity" />


        <!-- Optional: preload fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

</manifest>
